<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
  <changeSet id="13" author="nikhil">
    <createTable tableName="employee_leave_allocation"
      remarks="Table containing details of employee_leave_allocation">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints nullable="false" unique="true" primaryKey="true"/>
      </column>
      <column name="emp_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="leave_type_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="start_date" type="date">
        <constraints nullable="false"/>
      </column>
      <column name="end_date" type="date">
        <constraints nullable="false"/>
      </column>
      <column name="allocated_leaves" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="carried_leaves" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="total_leaves" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="additional_leaves" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="datetime">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="datetime">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addForeignKeyConstraint baseColumnNames="emp_id" baseTableName="leave"
      constraintName="fk_employee_leave_allocation_emp_id" onDelete="RESTRICT"
      referencedColumnNames="id"
      referencedTableName="employee"/>
    <addForeignKeyConstraint baseColumnNames="leave_type_id" baseTableName="leave"
      constraintName="fk_employee_leave_allocation_leave_type_id" onDelete="RESTRICT"
      referencedColumnNames="id"
      referencedTableName="leave_type"/>

  </changeSet>
</databaseChangeLog>
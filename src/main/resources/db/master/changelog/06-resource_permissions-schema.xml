<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
  <changeSet id="03" author="nikhil">
    <createTable tableName="resource_permission" remarks="Table containing relationship of resource and permission table">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints nullable="false" unique="true" primaryKey="true" />
      </column>
      <column name="resource_id" type="BIGINT">
        <constraints nullable="false" />
      </column>
      <column name="permission_id" type="BIGINT">
        <constraints nullable="false" />
      </column>
      <column name="created_at" type="datetime">
        <constraints nullable="false" />
      </column>
      <column name="updated_at" type="datetime">
        <constraints nullable="false" />
      </column>
    </createTable>
    <addForeignKeyConstraint baseColumnNames="resource_id" baseTableName="resource_permission" constraintName="fk_resource_id" onDelete="RESTRICT" referencedColumnNames="id" referencedTableName="resources" />
    <addForeignKeyConstraint baseColumnNames="permission_id" baseTableName="resource_permission" constraintName="fk_permission_id" onDelete="RESTRICT" referencedColumnNames="id" referencedTableName="permissions" />
  </changeSet>
</databaseChangeLog>
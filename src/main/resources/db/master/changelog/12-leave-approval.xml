<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
  <changeSet id="12" author="nikhil">
    <createTable tableName="leave_approval"
      remarks="Table containing details of leave_approval">
      <column name="leave_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="approved_by_emp_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addForeignKeyConstraint baseColumnNames="leave_id" baseTableName="leave_approval"
      constraintName="fk_leave_leave_approval" onDelete="RESTRICT" referencedColumnNames="id"
      referencedTableName="leave"/>
    <addForeignKeyConstraint baseColumnNames="approved_by_emp_id" baseTableName="leave_approval"
      constraintName="fk_employee_leave_approval" onDelete="RESTRICT" referencedColumnNames="emp_id"
      referencedTableName="employee"/>

  </changeSet>
</databaseChangeLog>